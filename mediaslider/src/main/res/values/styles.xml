<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
    </style>
    <style name="ProgressBar" parent="AppTheme">
        <item name="colorAccent">@color/progressbarColor</item>
    </style>

    <!-- TV-specific button style with proper focus -->
    <style name="TVMediaButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/tv_button_background</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">4dp</item>
    </style>

